@article{wunder_growthmortality_2008,
	title = {Growth–mortality relationships as indicators of life-history strategies: a comparison of nine tree species in unmanaged {European} forests},
	volume = {117},
	copyright = {© 2008 The Authors},
	issn = {1600-0706},
	shorttitle = {Growth–mortality relationships as indicators of life-history strategies},
