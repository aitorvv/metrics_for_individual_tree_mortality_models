@article{pretzsch_growth_2020,
	title = {Growth and mortality of {Norway} spruce and {European} beech in monospecific and mixed-species stands under natural episodic and experimentally extended drought. {Results} of the {KROOF} throughfall exclusion experiment},
	volume = {34},
